{
  "name": "pse-backend-demo",
  "version": "1.0.0",
  "description": "A demo backend for the PSE SDK",
  "main": "index.ts",
  "private": true,
  "repository": "gnosispay/pse-backend-demo",
  "license": "MIT",
  "scripts": {
    "build": "tsc && tsup",
    "dev": "node --import=tsx --watch src/index.ts",
    "start:prod": "node dist/index.js",
    "lint": "biome check .",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "check": "pnpm lint && pnpm format && pnpm build && pnpm test"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "8.4.0",
    "axios": "^1.13.2",
    "cors": "2.8.6",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "helmet": "8.1.0",
    "http-status-codes": "2.3.0",
    "https": "^1.0.0",
    "pino": "10.2.1",
    "pino-http": "11.0.0",
    "swagger-ui-express": "5.0.1",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/supertest": "6.0.3",
    "@types/swagger-ui-express": "4.1.8",
    "@vitest/coverage-v8": "4.0.17",
    "axios-logger": "^2.8.1",
    "pino-pretty": "13.1.3",
    "supertest": "7.2.2",
    "tsup": "8.5.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "6.0.4",
    "vitest": "4.0.17"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "esm",
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "skipNodeModulesBundle": true,
    "publicDir": "src/static"
  },
  "packageManager": "pnpm@10.28.1"
}
