{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["components/ui/**/*.tsx", "dist", "src/client"]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "bracketSpacing": true,
    "indentStyle": "space"
  },
  "organizeImports": { "enabled": false },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
