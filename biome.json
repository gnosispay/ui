{
  "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
  "vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!**/components/ui/**/*.tsx", "!**/dist", "!**/src/client"]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "bracketSpacing": true,
    "indentStyle": "space"
  },
  "assist": { "actions": { "source": { "organizeImports": "off" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useUniqueElementIds": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["src/index.css"],
      "linter": {
        "enabled": false
      }
    }
  ]
}
